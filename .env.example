# Amazon Arbitrage Tracker - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# KEEPA API
# =============================================================================
# Get your API key at https://keepa.com/#/api
# Free tier includes 100 requests/minute
KEEPA_API_KEY=your_keepa_api_key_here

# =============================================================================
# KAFKA
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# =============================================================================
# ELASTICSEARCH
# =============================================================================
ELASTICSEARCH_HOST=http://elasticsearch:9200
ELASTICSEARCH_INDEX=products

# =============================================================================
# PRODUCER CONFIG
# =============================================================================
# ASINs to monitor (comma-separated)
# Default: Example keyboard ASINs
ASIN_WATCHLIST=B09V3KXJPB,B0000000001,B07Y19G9H2

# Poll interval in seconds (default: 300 = 5 minutes)
POLL_INTERVAL_SECONDS=300

# =============================================================================
# ARBITRAGE DETECTOR
# =============================================================================
# Minimum margin percentage to consider (default: 15)
MIN_MARGIN_THRESHOLD=15

# Amazon FBA fee estimate (percentage of sale price)
FBA_FEE_PERCENTAGE=15

# =============================================================================
# API SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DASHBOARD
# =============================================================================
# Base URL of the API service
API_BASE_URL=http://api:8000

# Streamlit config
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# =============================================================================
# OPTIONAL: Logging
# =============================================================================
LOG_LEVEL=INFO
