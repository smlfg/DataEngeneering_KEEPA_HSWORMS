# Keepa API - Amazon Price Data
KEEPA_API_KEY=your-keepa-api-key
DEAL_SOURCE_MODE=product_only
# Keep empty when using file-based seeds
DEAL_SEED_ASINS=
DEAL_SEED_FILE=data/seed_asins_eu_qwertz.txt
DEAL_SCAN_INTERVAL_SECONDS=3600
DEAL_SCAN_BATCH_SIZE=10


# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/keeper
REDIS_URL=redis://localhost:6379/0

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Telegram
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Discord
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook

# App Config
DEBUG=true
LOG_LEVEL=INFO
